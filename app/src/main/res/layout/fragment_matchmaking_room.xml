<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@color/white" >

    <ImageButton
        android:id="@+id/btnBackToMatchmaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back_button"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tvMatchRoom"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRoomFutsalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Futsal Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchRoom" />

    <Button
        android:id="@+id/btnRoomSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Send Message"
        app:layout_constraintBottom_toBottomOf="@+id/ivHostProfile"
        app:layout_constraintStart_toEndOf="@+id/ivHostProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvHostName" />

    <Button
        android:id="@+id/btnRoomJoinRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Request to Join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHostProfile"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/tvRoomPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Players"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFutsalInfo" />

    <TextView
        android:id="@+id/tvRoomPlayerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="0/12"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRoomPlayers"
        app:layout_constraintStart_toEndOf="@+id/tvRoomPlayers"
        app:layout_constraintTop_toTopOf="@+id/tvRoomPlayers" />

    <TextView
        android:id="@+id/tvRoomMatchDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoomPlayers" />

    <TextView
        android:id="@+id/tvRoomMatchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:text="Time"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRoomMatchDate"
        app:layout_constraintStart_toEndOf="@+id/tvRoomMatchDate"
        app:layout_constraintTop_toTopOf="@+id/tvRoomMatchDate" />

    <TextView
        android:id="@+id/tvMatchHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Match Host"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdditionalInfo" />

    <ImageView
        android:id="@+id/ivHostProfile"
        android:layout_width="138dp"
        android:layout_height="136dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/blank_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchHost" />

    <Button
        android:id="@+id/btnFutsalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Futsal Info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoomFutsalName" />

    <TextView
        android:id="@+id/tvMatchRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:text="Match Room"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="Host Name"
        app:layout_constraintBottom_toBottomOf="@+id/ivHostProfile"
        app:layout_constraintStart_toEndOf="@+id/ivHostProfile"
        app:layout_constraintTop_toTopOf="@+id/ivHostProfile" />

    <TextView
        android:id="@+id/tvAdditionalInfo"
        android:layout_width="353dp"
        android:layout_height="103dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Additional Info"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRoomMatchDate" />


</androidx.constraintlayout.widget.ConstraintLayout>